{% extends '/admin/base.html.twig' %}

{% block title %}Admin - Catégorie
	{{ category.name }}
{% endblock %}

{% block body %}
	<div class="container">
		<div class="d-flex flex-column justify-content-center align-items-center">
			<h1 class="text-center mt-5 mb-5">Catégorie
				"{{ category.name }}"</h1>

			<table class="table">
				<tbody>
					<tr>
						<th>Id</th>
						<td>{{ category.id }}</td>
					</tr>
					<tr>
						<th>Nom</th>
						<td>{{ category.name }}</td>
					</tr>
				</tbody>
			</table>

			<a href="{{ path('app_admin_category_index') }}">Retour à la liste des catégories</a><br>

			<a class="btn btn-secondary mb-1" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">Modifier</a>

			{{ include('/admin/admin_category/_delete_form.html.twig') }}
		</div>
	</div>
{% endblock %}
