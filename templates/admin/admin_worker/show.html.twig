{% extends '/admin/base.html.twig' %}

{% block title %}Admin - Employé
	{{ worker.name }}{% endblock %}

{% block body %}
<div class="container">
		<div class="d-flex flex-column justify-content-center align-items-center">
			<h1 class="text-center mt-5 mb-5">Membre
				"{{ worker.name }}"</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ worker.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ worker.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ worker.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ worker.picture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_worker_index') }}">Retour à la liste des membres de l'équipe</a>

    <a href="{{ path('app_admin_worker_edit', {'id': worker.id}) }}">edit</a>

    {{ include('/admin/admin_worker/_delete_form.html.twig') }}
{% endblock %}
